<li>
	<%= form_for task do |form| %>
		<%= form.check_box :completed, class: "completed_checkbox" %>
	<% end %>

	<p><%= task.title %></p>
	<p>&mdash;<%= task.body %></p>

	<div class="delete_options">
		<%= link_to "Delete", root_path, class: "delete" %>
		<span class="options">
			<%= link_to "Cancel", root_path, class: "cancel" %> 
			// 
			<%= link_to "Destroy", task, method: :delete, class: "destroy" %>
		</span>
	</div>

</li>